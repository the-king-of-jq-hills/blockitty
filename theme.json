{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1600px"
        },
		"typography": {
			"dropCap": true,
			"fontFamilies": [
				{
					"fontFamily": "Roboto Slab",
					"name": "Roboto Slab, sans-serif",
					"slug": "roboto-slab",
					"fontFace": [
						{
							"fontFamily": "Roboto Slab",
							"fontWeight": "100 900",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/RobotoSlab-VariableFont_wght.ttf" ]
						}
					]
				},
				{
					"fontFamily": "Lora",
					"name": "Lora, serif",
					"slug": "lora",
					"fontFace": [
						{
							"fontFamily": "lora",
							"fontWeight": "100 900",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/Lora-VariableFont_wght.ttf" ]
						},
						{
							"fontFamily": "lora",
							"fontWeight": "100 900",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/Lora-Italic-VariableFont_wght.ttf" ]
						}
					]
				}                               
            ]    
        }                
    }
}